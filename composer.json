{
    "name": "railt/railt",
    "type": "library",
    "description": "The Railt Framework",
    "license": "MIT",
    "keywords": [
        "graphql",
        "sdl",
        "ast",
        "framework",
        "reflection",
        "railt",
        "application"
    ],
    "homepage": "http://railt.org",
    "support": {
        "issues": "https://github.com/railt/railt/issues",
        "source": "https://github.com/railt/railt"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "bin": [
        "bin/railt"
    ],
    "require": {
        "php": "^7.1.3",
        "ext-spl": "*",
        "ext-pcre": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "psr/cache": "~1.0",
        "psr/container": "~1.0",
        "psr/simple-cache": "~1.0",
        "illuminate/support": "~5.5",
        "webonyx/graphql-php": "~0.13",
        "symfony/console": "~3.4|~4.0",
        "symfony/event-dispatcher": "~3.4|~4.0",
        "railt/discovery": "~1.4.0|1.4.x-dev"
    },
    "replace": {
        "railt/container": "*",
        "railt/lexer": "*",
        "railt/parser": "*",
        "railt/io": "*",
        "railt/sdl": "*",
        "railt/http": "*",
        "railt/storage": "*"
    },
    "autoload": {
        "psr-4": {
            "Railt\\": "src/"
        },
        "files": [
            "./src/SDL/polyfill.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "railt/compiler": "~1.4.0|1.4.x-dev",
        "symfony/dependency-injection": "~3.4|~4.0",
        "symfony/var-dumper": "~3.4|~4.0",
        "symfony/finder": "~3.4|~4.0",
        "cache/filesystem-adapter": "~1.0",
        "illuminate/container": "~5.5",
        "monolog/monolog": "~1.9"
    },
    "autoload-dev": {
        "psr-4": {
            "Railt\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "monolog/monolog": "(1.*) PSR-3 Logger Implementation"
    },
    "scripts": {
        "post-autoload-dump": [
            "Railt\\Discovery\\Manifest::discover"
        ]
    },
    "extra": {
        "discovery": [
            "railt"
        ],
        "railt": {
            "commands": [
                "Railt\\SDL\\Console\\SDLGrammarCompileCommand",
                "Railt\\Foundation\\Console\\ExtensionsListCommand"
            ],
            "extensions": [
                "Railt\\ClassLoader\\ClassLoaderExtension",
                "Railt\\Routing\\RouterExtension",
                "Railt\\Foundation\\Debug\\DebugExtension",
                "Railt\\Foundation\\Normalization\\NormalizationExtension"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
