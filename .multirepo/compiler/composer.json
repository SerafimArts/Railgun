{
    "name": "railt/compiler",
    "type": "library",
    "description": "The Railt Compiler Parser-Generator",
    "license": "MIT",
    "keywords": [
        "compiler",
        "grammar",
        "language",
        "pp",
        "ast"
    ],
    "homepage": "http://railt.org",
    "support": {
        "issues": "https://github.com/railt/railt/issues",
        "source": "https://github.com/railt/compiler"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "require": {
        "php": ">=7.1.3",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pcre": "*",
        "ext-spl": "*",
        "railt/io": "1.4.*|1.4.x-dev",
        "railt/lexer": "1.4.*|1.4.x-dev",
        "railt/parser": "1.4.*|1.4.x-dev",
        "zendframework/zend-code": "~3.0"
    },
    "autoload": {
        "psr-4": {
            "Railt\\Component\\": "src"
        }
    },
    "require-dev": {
        "symfony/finder": "~4.0",
        "phpunit/phpunit": "^7.5",
        "railt/discovery": "1.4.*|1.4.x-dev"
    },
    "autoload-dev": {
        "psr-4": {
            "Railt\\Tests\\Compiler\\": "tests"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Railt\\Discovery\\Manifest::discover"
        ]
    },
    "extra": {
        "railt": {
            "commands": [
                "Railt\\Component\\Compiler\\Console\\GrammarCompileCommand",
                "Railt\\Component\\Compiler\\Console\\CompileCommand"
            ]
        },
        "branch-alias": {
            "1.3.x": "1.3.x-dev",
            "1.4.x": "1.4.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
